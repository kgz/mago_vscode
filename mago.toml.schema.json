{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/kgz/mago_vscode/main/mago.toml.schema.json",
  "title": "Mago Configuration Schema",
  "description": "Schema for mago.toml configuration files used by the Mago static analysis tool",
  "type": "object",
  "properties": {
    "php-version": {
      "type": "string",
      "description": "The version of PHP to use for parsing and analysis",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$",
      "examples": ["8.1", "8.2", "8.3", "8.4", "8.4.0"],
      "default": "8.1"
    },
    "source": {
      "type": "object",
      "description": "Configuration for how Mago discovers files to analyze and format",
      "properties": {
        "paths": {
          "type": "array",
          "description": "Source roots for analysis",
          "items": {
            "type": "string"
          },
          "default": ["src/"]
        },
        "includes": {
          "type": "array",
          "description": "Additional include paths (e.g. vendor)",
          "items": {
            "type": "string"
          },
          "default": ["vendor"]
        }
      }
    },
    "formatter": {
      "type": "object",
      "description": "Formatter configuration options",
      "properties": {
        "print-width": {
          "type": "integer",
          "description": "Maximum line width for formatting",
          "default": 120
        },
        "tab-width": {
          "type": "integer",
          "description": "Number of spaces per tab",
          "default": 4
        },
        "use-tabs": {
          "type": "boolean",
          "description": "Use tabs instead of spaces",
          "default": false
        }
      }
    },
    "linter": {
      "type": "object",
      "description": "Linter configuration options",
      "properties": {
        "integrations": {
          "type": "array",
          "description": "External tooling integrations",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "rules": {
          "type": "object",
          "description": "Linter rule overrides",
          "properties": {
            "ambiguous-function-call": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "literal-named-argument": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": true
                }
              }
            },
            "halstead": {
              "type": "object",
              "properties": {
                "effort-threshold": {
                  "type": "integer",
                  "default": 7000
                }
              }
            }
          },
          "additionalProperties": true
        }
      }
    },
    "analyzer": {
      "type": "object",
      "description": "Analyzer configuration options",
      "properties": {
        "excludes": {
          "type": "array",
          "description": "A list of paths or glob patterns to exclude from analysis",
          "items": {
            "type": "string"
          },
          "default": ["vendor/**"]
        },
        "ignore": {
          "type": "array",
          "description": "A list of issue codes to ignore globally",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "find-unused-expressions": {
          "type": "boolean",
          "description": "Find expressions whose results are not used",
          "default": true
        },
        "find-unused-definitions": {
          "type": "boolean",
          "description": "Find unused definitions (e.g., unused private methods)",
          "default": true
        },
        "analyze-dead-code": {
          "type": "boolean",
          "description": "Analyze code that appears unreachable",
          "default": true
        },
        "check-throws": {
          "type": "boolean",
          "description": "Check for unhandled thrown exceptions not documented with @throws",
          "default": true
        },
        "allow-possibly-undefined-array-keys": {
          "type": "boolean",
          "description": "Allow accessing possibly undefined array keys",
          "default": true
        },
        "perform-heuristic-checks": {
          "type": "boolean",
          "description": "Perform extra heuristic checks for potential issues",
          "default": true
        },
        "memoize-properties": {
          "type": "boolean",
          "description": "Track literal values of class properties (may increase memory)",
          "default": false
        },
        "mixed-issues": {
          "type": "boolean",
          "description": "Mixed type usage issues",
          "default": true
        },
        "falsable-issues": {
          "type": "boolean",
          "description": "Possibly false values issues",
          "default": true
        },
        "nullable-issues": {
          "type": "boolean",
          "description": "Possibly null values issues",
          "default": true
        },
        "redundancy-issues": {
          "type": "boolean",
          "description": "Redundant code issues",
          "default": true
        },
        "reference-issues": {
          "type": "boolean",
          "description": "By-reference variables issues",
          "default": true
        },
        "unreachable-issues": {
          "type": "boolean",
          "description": "Unreachable code issues",
          "default": true
        },
        "deprecation-issues": {
          "type": "boolean",
          "description": "Deprecated code usage issues",
          "default": true
        },
        "impossibility-issues": {
          "type": "boolean",
          "description": "Logically impossible conditions issues",
          "default": true
        },
        "ambiguity-issues": {
          "type": "boolean",
          "description": "Ambiguous constructs issues",
          "default": true
        },
        "existence-issues": {
          "type": "boolean",
          "description": "Symbol existence problems issues",
          "default": true
        },
        "template-issues": {
          "type": "boolean",
          "description": "Generic template types issues",
          "default": true
        },
        "argument-issues": {
          "type": "boolean",
          "description": "Function arguments issues",
          "default": true
        },
        "operand-issues": {
          "type": "boolean",
          "description": "Expression operands issues",
          "default": true
        },
        "property-issues": {
          "type": "boolean",
          "description": "Class properties issues",
          "default": true
        },
        "generator-issues": {
          "type": "boolean",
          "description": "Generators issues",
          "default": true
        },
        "array-issues": {
          "type": "boolean",
          "description": "Array operations issues",
          "default": true
        },
        "return-issues": {
          "type": "boolean",
          "description": "Function/method return types issues",
          "default": true
        },
        "method-issues": {
          "type": "boolean",
          "description": "Methods and their usage issues",
          "default": true
        },
        "iterator-issues": {
          "type": "boolean",
          "description": "Iterators issues",
          "default": true
        }
      }
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "php-version": "8.4",
      "source": {
        "paths": ["src/"],
        "includes": ["vendor"]
      },
      "formatter": {
        "print-width": 120,
        "tab-width": 4,
        "use-tabs": false
      },
      "linter": {
        "integrations": [],
        "rules": {
          "ambiguous-function-call": { "enabled": false },
          "literal-named-argument": { "enabled": false },
          "halstead": { "effort-threshold": 7000 }
        }
      },
      "analyzer": {
        "excludes": ["vendor/**"],
        "find-unused-expressions": false,
        "find-unused-definitions": true,
        "analyze-dead-code": false,
        "check-throws": true,
        "allow-possibly-undefined-array-keys": true,
        "perform-heuristic-checks": true
      }
    }
  ]
}
