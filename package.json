{
  "name": "mago-problems",
  "displayName": "mago problems",
  "description": "An extension that surfaces diagnostics from Mago (PHP analyzer) directly in VS Code with fast, workspace-wide analysis and inline quick fixes.",
  "version": "0.0.1",
  "publisher": "github.com/kgz",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:php",
    "onCommand:mago.analyzeFile",
    "onCommand:mago.analyzeWorkspace"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      { "command": "mago-problems.helloWorld", "title": "Hello World" },
      { "command": "mago.analyzeFile", "title": "Mago: Analyze Current File" },
      { "command": "mago.analyzeWorkspace", "title": "Mago: Analyze Workspace" }
    ],
    "configuration": {
      "title": "Mago",
      "properties": {
        "mago.path": { "type": "string", "default": "", "description": "Absolute path to mago binary (optional)" },
        "mago.analyzer.args": { "type": "array", "items": { "type": "string" }, "default": [], "description": "Extra CLI args for mago analyzer" },
        "mago.runOn": { "type": "string", "enum": ["save", "type", "manual"], "default": "save", "description": "When to run analysis" },
        "mago.debounceMs": { "type": "number", "default": 400, "minimum": 0, "description": "Debounce milliseconds for on-type analysis" },
        "mago.autodiscoverVendor": { "type": "boolean", "default": true, "description": "Try to resolve vendor/bin/mago if composer.json exists in workspace" },
        "mago.reporting.format": { "type": "string", "enum": ["rich","medium","short","ariadne","github","gitlab","json","count","code-count","checkstyle","emacs"], "default": "json", "description": "Reporting format for analyzer output" },
        "mago.reporting.target": { "type": "string", "enum": ["stdout","stderr"], "default": "stdout", "description": "Reporting target stream" },
        "mago.minimumFailLevel": { "type": "string", "enum": ["note","help","warning","error"], "default": "error", "description": "Minimum issue level that causes non-zero exit" },
        "mago.fix.enabled": { "type": "boolean", "default": false, "description": "Apply fixes (runs with --fix)" },
        "mago.fix.dryRun": { "type": "boolean", "default": true, "description": "Use --dry-run when fixing" },
        "mago.fix.formatAfterFix": { "type": "boolean", "default": false, "description": "Use --format-after-fix with --fix" },
        "mago.fixableOnly": { "type": "boolean", "default": false, "description": "Filter to only fixable issues (--fixable-only)" }
        ,
        "mago.dryRun": { "type": "boolean", "default": true, "description": "Log analyzer command without executing it" }
        ,
        "mago.apply.allowUnsafe": { "type": "boolean", "default": false, "description": "Allow applying suggestions marked Unsafe" },
        "mago.apply.allowPotentiallyUnsafe": { "type": "boolean", "default": false, "description": "Allow applying suggestions marked PotentiallyUnsafe" }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
