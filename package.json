{
  "name": "mago-problems",
  "displayName": "mago problems",
  "description": "An extension that surfaces diagnostics from Mago (PHP analyzer) directly in VS Code with fast, workspace-wide analysis and inline quick fixes.",
  "version": "0.0.1",
  "publisher": "kgz",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:php"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mago-problems.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "mago.analyzeFile",
        "title": "Mago: Analyze Current File"
      },
      {
        "command": "mago.analyzeWorkspace",
        "title": "Mago: Analyze Workspace"
      }
    ],
    "configuration": {
      "title": "Mago",
      "properties": {
        "mago.path": {
          "type": "string",
          "default": "",
          "description": "Absolute path to mago binary. Leave blank to auto-detect from composer (vendor/bin/mago)."
        },
        "mago.analyzer.args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Extra CLI args for mago analyzer"
        },
        "mago.runOn": {
          "type": "string",
          "enum": [
            "save",
            "type",
            "manual"
          ],
          "default": "save",
          "description": "When to run analysis"
        },
        "mago.debounceMs": {
          "type": "number",
          "default": 400,
          "minimum": 0,
          "description": "Debounce milliseconds for on-type analysis"
        },
        "mago.minimumFailLevel": {
          "type": "string",
          "enum": [
            "note",
            "help",
            "warning",
            "error"
          ],
          "default": "error",
          "description": "Minimum issue level that causes non-zero exit"
        },
        
        
        "mago.analysis.apply.allowUnsafe": {
          "type": "boolean",
          "default": false,
          "description": "Allow applying suggestions marked Unsafe"
        },
        "mago.analysis.apply.allowPotentiallyUnsafe": {
          "type": "boolean",
          "default": false,
          "description": "Allow applying suggestions marked PotentiallyUnsafe"
        },
        "mago.analysis.suppress.showLineExpect": {
          "type": "boolean",
          "default": true,
          "description": "Show 'Suppress with @mago-expect (next line)' action"
        },
        "mago.analysis.suppress.showLineIgnore": {
          "type": "boolean",
          "default": true,
          "description": "Show 'Suppress with @mago-ignore (next line)' action"
        },
        "mago.analysis.suppress.showBlockIgnore": {
          "type": "boolean",
          "default": true,
          "description": "Show 'Suppress block with @mago-ignore' action"
        },
        "mago.analysis.suppress.showBlockExpect": {
          "type": "boolean",
          "default": true,
          "description": "Show 'Expect issue for block with @mago-expect' action"
        },
        "mago.analysis.suppress.showWorkspaceIgnore": {
          "type": "boolean",
          "default": true,
          "description": "Show 'Ignore in workspace (mago.toml)' action"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:reset": "node scripts/test-with-reset.js",
    "test:clean": "pnpm run test:reset",
    "demo:reset": "pnpm run compile-tests && node scripts/demo-reset.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}